{% extends 'base.html.twig' %}

{% block contenu %}
    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>RAISON SOCIALE</th>
                <th>ADRESSE</th>
                <th>SIRET</th>
                <th>CP</th>
                <th>VILLE</th>
                <th>SALARIES</th>
            </tr>
            </thead>
            <tbody>

            {% for entreprise in entreprises %}
                <tr>
                    <td><a href="{{ path('entreprise_show', {'id':entreprise.id}) }}">
                            {{ entreprise.raisonsociale }}</a></td>
                    <td>{{ entreprise.adresse }}</td>
                    <td>{{ entreprise.siret }}</td>
                    <td>{{ entreprise.cp }}</td>
                    <td>{{ entreprise.ville }}</td>
                    <td>
                        {% for salarie in entreprise.salaries %}
                            {{ salarie.prenom  ~ ' ' ~ salarie.nom }}<br>
                        {% endfor %}
                    </td>
                    <td><a class="btn btn-primary" href="{{ path('entreprise_edit',
                            {'id':entreprise.id}) }}" role="button">Modifier</a></td>
                    <td><a class="btn btn-primary" href="{{ path('entreprise_delete',
                            {'id':entreprise.id}) }}" role="button">Suprimmer</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="container">
            <a name="home" id="home" class="btn btn-primary" href="{{ path('home') }}" role="button">Back</a>
        </div>
    </div>
{% endblock %}

